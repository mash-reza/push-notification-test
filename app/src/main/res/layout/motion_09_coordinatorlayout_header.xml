<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="0dp"
            android:layout_height="100dp" app:srcCompat="@drawable/image"
            android:id="@+id/background" android:scaleType="centerCrop"
            android:adjustViewBounds="true" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Here's Johnny!!!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textSize="18sp"
            android:textColor="#000"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/background"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/background"/>
</androidx.constraintlayout.widget.ConstraintLayout>